###################################################################################################################################################################################################
# Rascaf
###################################################################################################################################################################################################

FROM sagnikbanerjee15/star:2.7.9a
LABEL maintainer="sagnikbanerjee15@gmail.com" 
LABEL org.opencontainers.image.source https://github.com/sagnikbanerjee15/dockerized_tools_and_pipelines

ENV TZ=America/New_York
ENV DEBIAN_FRONTEND=noninteractive

###################################################################################################################################################################################################
# Update base image and install software
###################################################################################################################################################################################################

RUN apt-get -y update && apt-get clean all
RUN apt-get install -y wget python3 python3-pip git

###################################################################################################################################################################################################
# Rascaf 1.0l.2
###################################################################################################################################################################################################

ENV RASCAF_VERSION=1.0.2
RUN mkdir /softwares && \
	cd /softwares && \
	wget https://github.com/mourisl/Rascaf/archive/refs/tags/v${RASCAF_VERSION}.tar.gz && \
	tar -xvzf v${RASCAF_VERSION}.tar.gz && \
	cd Rascaf-${RASCAF_VERSION} && \
	make
	 
ENV PATH $PATH:/softwares/Rascaf-${RASCAF_VERSION}